{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center /cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Membro</div>
                <div>{{member.name}}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{member.email}}</div>
            </div>

            <div class="item">
                <div>Aniverśario</div>
                <div>{{member.birth}}</div>
            </div>

            
            <div class="item">
                <div>Ano Escolar</div>
                <div>{{"3 ano" if member.schoolYear == "ano_3" else "2 ano" if member.schoolYear == "ano_2"}}</div>
            </div>

            <div class="item">
                <div>Área de Atuação</div>
                <div>
                    {% for service in member.services %}
                    <span>{{service}}</span>
                    {% endfor %}
                </div>
            </div>

            <a href="/members/{{member.id}}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock %}