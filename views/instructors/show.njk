{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{instructor.avatar_url}}) no-repeat center center /cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{instructor.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{instructor.age}}</div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{instructor.school}}</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>{{"Presencial" if instructor.distance == "P" else "À distância"}}</div>
            </div>

            <div class="item">
                <div>Área de Atuação</div>
                <div>
                    {% for service in instructor.services %}
                    <span>{{service}}</span>
                    {% endfor %}
                </div>
            </div>

            <a href="/instructors/{{instructor.id}}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock %}